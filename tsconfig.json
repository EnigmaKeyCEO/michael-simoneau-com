{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "jsx": "react-jsx",
    "strict": true,
    "noEmit": true,
    "allowJs": false,
    "isolatedModules": true,
    "types": ["jest"],
    "typeRoots": ["./types", "./node_modules/@types"],
    "paths": {
      "@react-three/fiber/native": ["./types/@react-three__fiber/native/index"],
      "@react-three/drei": ["./types/@react-three__drei/index"],
      "three": ["./types/three/index"],
      "@react-three/fiber": ["./types/@react-three__fiber/index"]
    }
  },
  "include": [
    "app",
    "src",
    "scripts",
    "types/**/*.d.ts",
    "app.config.ts",
    "app.config.js",
    "app.json",
    "AGENTS.md",
    "**/AGENTS.md",
    "src/**/*.spec.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts"
  ]
}
