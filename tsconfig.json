{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "jsx": "react-jsx",
    "strict": true,
    "noEmit": true,
    "allowJs": false,
    "isolatedModules": true,
    "types": ["jest"]
  },
  "include": [
    "app",
    "src",
    "scripts",
    "types",
    "app.config.ts",
    "app.config.js",
    "app.json",
    "AGENTS.md",
    "**/AGENTS.md",
    ".expo/types/**/*.ts",
    "expo-env.d.ts",
    "src/**/*.spec.tsx"
  ],
  "extends": "expo/tsconfig.base"
}
