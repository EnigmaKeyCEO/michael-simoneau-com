{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "jsx": "react-jsx",
    "strict": true,
    "noEmit": true,
    "allowJs": false,
    "resolveJsonModule": true,
    "isolatedModules": true
  },
  "include": [
    "app",
    "src",
    "scripts",
    "types",
    "app.config.ts",
    "app.config.js",
    "app.json",
    "AGENTS.md",
    "**/AGENTS.md"
  ]
}
